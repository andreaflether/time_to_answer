<h2>Listando administradores</h2>

<div class="table-responsive">
   <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
   <thead>
      <tr>
      <th>#</th>
      <th>E-mail</th>
      <th>Ações</th>
      </tr>
   </thead>

   <tbody>
      <% @admins.each do |admin| %>
         <tr>
            <td><%= admin.id %></td>
            <td><%= admin.email %></td>
            <td style="width: 100px;">
               <%= link_to edit_admins_backoffice_admin_path(admin), class: "btn btn-primary btn-circle btn-sm" do %>
                  <i class="fas fa-pencil"></i>
               <% end %>
               <a href="#" class="btn btn-danger btn-circle btn-sm"><i class="fas fa-trash"></i></a>
               <%# <a href="#" class="btn btn-info btn-circle btn-sm"><i class="fas fa-pencil"></i></a> %>
            </td>
         </tr>
      <% end %>                    
   </tbody>
   </table>
</div>
