<div class="d-flex justify-content-between">
   <h2 class="mb-4"><%= t('messages.listing', resource: @questions.model_name.human(count: 2))%></h2>
   <%= link_to new_admins_backoffice_question_path, class: "mt-2 btn btn-success btn-circle btn-sm", 
   title: 'Cadastrar pergunta', 'data-toggle' => 'tooltip' do %>
      <i class="fas fa-plus"></i>
   <% end %>
</div>

<div class="table-responsive">
   <table class="table table-bordered table-hover dataTable" width="100%" cellspacing="0">
   <thead>
      <tr>
      <th>#</th>
      <th><%= translate(@questions, :description)%></th>
      <th><%= translate(@questions, :subject)%></th>
      <th>Ações</th>
      </tr>
   </thead>

   <tbody>
      <% @questions.each do |question| %>
         <tr>
            <td><%= question.id %></td>
            <td><%= question.description.truncate(60) %></td>
            <td><%= question.subject.description.truncate(40) %></td>
            <td style="width: 100px;">
               <%= link_to edit_admins_backoffice_question_path(question), class: "btn btn-primary btn-circle btn-sm" do %>
                  <i class="fas fa-pencil"></i>
               <% end %>
               <%= link_to admins_backoffice_question_path(question), method: :delete, 
               data: { confirm: t('messages.confirmation', item: question.description.truncate(20))}, 
               class: "btn btn-danger btn-circle btn-sm" do %>
                  <i class="fas fa-trash"></i>
               <% end %>  
            </td>
         </tr>
      <% end %>                    
   </tbody>
   </table>
</div>
