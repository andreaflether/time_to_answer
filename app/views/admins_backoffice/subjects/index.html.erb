<div class="d-flex justify-content-between">
   <h2 class="mb-4"><%= t('messages.listing', resource: @subjects.model_name.human(count: 2)) %> </h2>
   <%= link_to new_admins_backoffice_subject_path, class: "mt-2 btn btn-success btn-circle btn-sm", title: 'Cadastrar assunto/área',
   'data-toggle' => 'tooltip' do %>
      <i class="fas fa-plus"></i>
   <% end %>
</div>

<div class="table-responsive">
   <table class="table table-bordered table-hover dataTable" width="100%" cellspacing="0">
   <thead>
      <tr>
      <th>#</th>
      <th><%= translate(@subjects, :description)%></th>
      <th>Ações</th>
      </tr>
   </thead>

   <tbody>
      <% @subjects.each do |subject| %>
         <tr>
            <td><%= subject.id %></td>
            <td><%= subject.description %></td>
            <td style="width: 100px;">
               <%= link_to edit_admins_backoffice_subject_path(subject), class: "btn btn-primary btn-circle btn-sm" do %>
                  <i class="fas fa-pencil"></i>
               <% end %>
               <%= link_to admins_backoffice_subject_path(subject), method: :delete, 
               data: { confirm: t('messages.confirmation', item: subject.description.truncate(20))}, 
               class: "btn btn-danger btn-circle btn-sm" do %>
                  <i class="fas fa-trash"></i>
               <% end %>  
            </td>
         </tr>
      <% end %>                    
   </tbody>
   </table>
</div>
