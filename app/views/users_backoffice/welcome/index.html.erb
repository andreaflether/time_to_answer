
<div class="container">
  <div class="row">
    <div class="col-12 mb-4">
    <h3>Seja bem-vindo(a), <b><%= current_user.full_name %></b>!</h3>
    </div>
    
    <div class="col-xl-4">
      <div class="card border-left-primary shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Perguntas respondidas</div>
              <div class="h5 mb-0 font-weight-bold text-gray-800"><%= @user_statistic.total_questions %></div>
            </div>
            <div class="col-auto">
              <i class="fas fa-question fa-2x text-gray-300"></i>
            </div>
          </div>
        </div>
      </div> 
    </div> <!-- Col -->

    <div class="col-xl-4">
      <div class="card border-left-success shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Respostas certas</div>
              <div class="h5 mb-0 font-weight-bold text-gray-800"><%= @user_statistic.right_questions %></div>
            </div>
            <div class="col-auto">
              <i class="fas fa-check fa-2x text-gray-300"></i>
            </div>
          </div>
        </div>
      </div> 
    </div> <!-- Col -->

    <div class="col-xl-4">
      <div class="card border-left-danger shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">Respostas erradas</div>
              <div class="h5 mb-0 font-weight-bold text-gray-800"><%= @user_statistic.wrong_questions %></div>
            </div>
            <div class="col-auto">
              <i class="fas fa-times fa-2x text-gray-300"></i>
            </div>
          </div>
        </div>
      </div> 
    </div> <!-- Col -->
    <!-- Row -->       
  </div>
</div>
   
  
